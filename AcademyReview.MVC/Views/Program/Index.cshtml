@model IEnumerable<AcademyReview.Models.ProgramModels.ProgramListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Program Rankings</h2>

<p>
    @Html.ActionLink("Add Program", "Create", "Program")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProgramId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.AcademyId)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.AcademyName)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prerequisite)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.AverageRating)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.HiddenFor(modelItem => item.ProgramId)
                @*@Html.DisplayFor(modelItem => item.ProgramId)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @Html.HiddenFor(modelItem => item.AcademyId)
            <td>
                @Html.DisplayFor(modelItem => item.AcademyName)
            </td>
            @Html.HiddenFor(modelItem => item.Type)
            @Html.HiddenFor(modelItem => item.Prerequisite)
            <td>
                @Html.DisplayFor(modelItem => item.AverageRating)
            </td>
            <td>
                @Html.ActionLink("Rate", "Rate", new { id = item.ProgramId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProgramId }) |
                @Html.ActionLink("View Ratings", "Ratings", new { id = item.ProgramId })
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProgramId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProgramId })
                </td>*@
        </tr>
    }

</table>
